{{#if listado.length }}
    {{#each listado}}      
        <a href="" class="card"> 
            <article class="card__article">
                <div class="card__image-container">
                    <img class="card__image" src="{{foto}}" alt="{{nombre}}" />
                </div>
                <div class="card__content">
                    <h2 class="card__heading">{{nombre}}</h2>
                    <div class="card__description">
                            <p>Precio: {{precio}}</p>
                            <p>Stock: {{stock}}</p>
                            <p>Marca: {{marca}}</p>
                            <p>Categoria: {{categoria}}</p>
                            <p>Detalles: {{detalles}}</p>
                    </div>
                </div>
                <button class="agregarAlCarrito" onclick="agregarCarrito(event,'{{_id}}',this)">Agregar</button>
            </article>
        </a>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}